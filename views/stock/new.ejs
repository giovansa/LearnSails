<form  action="/stock/create" method="post">
  <h2>Create a new stock for <%= user.username %></h2>
  <hr>
  <input type="hidden" name="owner" value="<%= user.id %>">
  <input type="text" name="symbol" value="" placeholder="symbol">
  <input type="text" name="number_of_shares" value="" placeholder="number of shares">
  <input type="submit" name="" value="Add stock">
</form>
