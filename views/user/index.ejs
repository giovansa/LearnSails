<h2>Users</h2>
<hr>
<table>
  <tr>
    <th>ID</th>
    <th>Username</th>
    <th>Gender</th>
    <th colspan="3">Option</th>
  </tr>

  <!-- looping here -->
  <% _.each(users, function(user){ %>
    <tr data-id="<%= user.id %>" data-model="user">
      <td><%= user.id %></td>
      <td><%= user.username %></td>
      <td><%= user.user_gender %></td>
      <td colspan="3">
        <a href="/user/show/<%= user.id %>">Show</a>
        <a href="/user/edit/<%= user.id %>">Edit</a>
        <a href="/user/destroy/<%= user.id %>">Delete</a>
      </td>
    </tr>
  <% }) %>

  <a href="/user/new">Insert new data</a>


</table>
